{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Celesteia.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish Windows x64",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-c",
                "Release",
                "-r",
                "win-x64",
                "/p:PublishReadyToRun=false",
                "/p:TieredCompilation=false",
                "/p:DebugType=none",
                "/p:DebugSymbols=false",
                "--self-contained"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish Windows x86",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-c",
                "Release",
                "-r",
                "win-x86",
                "/p:PublishReadyToRun=false",
                "/p:TieredCompilation=false",
                "/p:DebugType=none",
                "/p:DebugSymbols=false",
                "--self-contained"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Celesteia.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}